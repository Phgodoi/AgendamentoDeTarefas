@model AgendamentoDeTarefas.Models.Tarefas;
@{
    ViewData["Title"] = "Editar Tarefa";
}

<h2>Editar Tarefa</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" type="date" class="form-control" />
            </div>
            <br>

            <div>
                @foreach (var status in Enum.GetValues(typeof(EnumStatusTarefa)))
                {
                    <div class="d-inline-block form-check">
                        <input type="radio" id="@status" name="Status" value="@status" class="form-check-input" />
                        <label class="form-check-label" for="@status">@status</label>
                    </div>
                }
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>



<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">